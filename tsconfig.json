{
  //"extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",  // Assurez-vous que vous utilisez 'commonjs' ou 'esnext' comme module
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
